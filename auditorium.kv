#:import sla kivy.adapters.listadapter
#:import sdm kivy.adapters.models
#:import label kivy.uix.label
#:import button kivy.uix.button
#:import lv kivy.uix.listview


<MainForm>:
    orientation: 'horizontal'
    padding: [2,2,2,2]
    list_view: list_view_id
            
    BoxLayout:
        orientation: 'vertical'
        Button:
            id: 'loader'
            size_hint: 1, .1
            text: root.pDir
            id: 'load'
            on_press: root.getdir()
        ListView:
            id: list_view_id
            size_hint: 1,.8
            adapter:
                sla.ListAdapter(
                #allow_empty_selection = False,
                selection_mode='single',
                selection_limit=1,
                data=root.pList,
                cls=root.LIButton,
                )
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: tb
            orientation: 'vertical'
            size_hint: 1, .33
            Button:
                id: play
                size_hint: 1, 0.67
                text: 'Play'
                on_press: root.playit()
            ProgressBar:
                id: pb
                size_hint: 1, 0.1
                value: 0
            BoxLayout:
                size_hint: 1, 0.33
                orientation: 'horizontal'
                Button:
                    id: prev
                    size_hint: 0.2, 1
                    text: 'Prev'
                    on_press: root.prev()
                Button:
                    id: stop
                    size_hint: 0.8, 1
                    text: 'Next'
                    on_press: root.next()
        Label:
            size_hint: 1, 0.05
            color: [0, .7, .7, 1]
            text: '.  .  e  f  f  e  c  t  s  .  .'
        BoxLayout:
            size_hint: 1, .66
            orientation: 'vertical'
            GridLayout:
                id: fxa
                rows: 2
                cols: 4
